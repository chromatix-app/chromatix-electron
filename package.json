{
  "name": "chromatix-electron",
  "version": "0.1.4",
  "description": "A desktop music player for Plex.",
  "author": "",
  "main": "electron/app.js",
  "scripts": {
    "start": "electron . --dev --trace-warnings",
    "nodemon": "nodemon --exec 'npm start'",
    "postinstall": "electron-builder install-app-deps",
    "### BUILD (DEV) ###": "",
    "// dev-mac-intel": "electron-builder -m --x64 --dir",
    "dev-mac-silicon": "npm run set-local-true && electron-builder -m --arm64 --dir && npm run set-local-false",
    "dev-mac-universal": "npm run set-local-true && electron-builder -m --universal --dir && npm run set-local-false",
    "dev-mac-all": "npm run set-local-true && electron-builder -m --arm64 --universal --dir && npm run set-local-false",
    "dev-win-32": "npm run set-local-true && electron-builder -w --ia32 --dir && npm run set-local-false",
    "dev-win-64": "npm run set-local-true && electron-builder -w --x64 --dir && npm run set-local-false",
    "dev-win-all": "npm run set-local-true && electron-builder -w --ia32 --x64 --dir && npm run set-local-false",
    "// dev-lin": "electron-builder -l --ia32 --x64 --dir",
    "### BUILD (PROPER) ###": "",
    "// build-mac-intel": "dotenv -- electron-builder -m --x64",
    "build-mac-silicon": "dotenv -- electron-builder -m --arm64",
    "build-mac-universal": "dotenv -- electron-builder -m --universal",
    "build-mac-all": "dotenv -- electron-builder -m --arm64 --universal",
    "build-win-32": "dotenv -- electron-builder -w --ia32",
    "build-win-64": "dotenv -- electron-builder -w --x64",
    "build-win-all": "dotenv -- electron-builder -w --ia32 --x64",
    "### SHIP ###": "",
    "ship-mac": "dotenv -- electron-builder -m --arm64 --universal -p always",
    "### UTILS ###": "",
    "set-local-true": "node lib/set-local-true.js",
    "set-local-false": "node lib/set-local-false.js"
  },
  "nodemonConfig": {
    "ignore": [
      "data/*",
      "dist/*",
      "dist2/*",
      "dist3/*",
      "dist4/*",
      "dist5/*"
    ]
  },
  "build": {
    "appId": "com.chromatix.app",
    "productName": "Chromatix",
    "directories": {
      "buildResources": "resources/white"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "chromatix-app",
        "repo": "chromatix-release"
      }
    ],
    "files": [
      "!**/dist2/*",
      "!**/dist3/*",
      "!**/dist4/*",
      "!**/dist5/*"
    ],
    "mac": {
      "category": "public.app-category.music",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "./entitlements/default.mas.plist",
      "entitlementsInherit": "./entitlements/default.mas.child.plist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "category": "Music",
      "target": [
        "deb",
        "freebsd",
        "rpm",
        "AppImage",
        "snap"
      ]
    }
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "dotenv-cli": "^8.0.0",
    "electron-log": "^5.2.4",
    "electron-updater": "^6.3.9",
    "electron-window-state": "^5.0.3"
  },
  "devDependencies": {
    "electron": "^34.0.0",
    "electron-builder": "^25.1.8",
    "nodemon": "^3.1.9"
  }
}
