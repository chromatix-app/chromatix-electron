{
  "name": "chromatix-electron",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "main": "electron/app.js",
  "scripts": {
    "start": "electron . --dev",
    "nodemon": "nodemon --exec 'npm start'",
    "build-all": "electron-builder --dir -mwl --ia32 --x64",
    "build-mac": "electron-builder --dir -m",
    "OLD-build-win": "electron-builder --dir -w --ia32",
    "build-win": "electron-builder --dir -w --ia32 --x64",
    "build-win-mac": "electron-builder --dir -mw --ia32 --x64",
    "build-lin": "electron-builder --dir -l --ia32 --x64",
    "ship": "electron-builder -mw --ia32 --x64 -p always",
    "ship-mac": "electron-builder -m --ia32 --x64 -p always",
    "rebuild": "electron-rebuild",
    "postinstall": "electron-builder install-app-deps"
  },
  "nodemonConfig": {
    "ignore": [
      "data/*"
    ]
  },
  "build": {
    "appId": "com.chromatix.app",
    "productName": "Chromatix",
    "directories": {
      "buildResources": "resources"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "chromatix-app",
        "repo": "chromatix-release"
      }
    ],
    "mac": {
      "category": "public.app-category.music"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "category": "Music",
      "target": [
        "deb",
        "freebsd",
        "rpm",
        "AppImage",
        "snap"
      ]
    }
  },
  "dependencies": {
    "electron-log": "^5.1.4",
    "electron-updater": "^6.1.8",
    "electron-window-state": "^5.0.3"
  },
  "devDependencies": {
    "electron": "^26.6.10",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.7",
    "nodemon": "^3.1.0"
  }
}
