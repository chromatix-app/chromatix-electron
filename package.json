{
  "name": "chromatix-electron",
  "version": "0.1.4-beta.1",
  "description": "A desktop music player for Plex.",
  "author": "",
  "main": "electron/app.js",
  "scripts": {
    "start": "ELECTRON_ENV=local electron . --dev --trace-warnings",
    "nodemon": "nodemon --exec 'npm start'",
    "postinstall": "electron-builder install-app-deps",
    "### BUILD ###": "",
    "// build-mac": "ELECTRON_ENV=local electron-builder -m --dir",
    "// build-mac-intel": "ELECTRON_ENV=local electron-builder -m --x64 --dir",
    "build-mac-silicon": "ELECTRON_ENV=local electron-builder -m --arm64 --dir",
    "build-mac-universal": "ELECTRON_ENV=local electron-builder -m --universal --dir",
    "build-mac-all": "npm run build-mac-silicon && npm run build-mac-universal",
    "### BUILD & NOTORIZE ###": "",
    "// noto-mac": "ELECTRON_ENV=local dotenv -- electron-builder -m --dir",
    "// noto-mac-intel": "ELECTRON_ENV=local dotenv -- electron-builder -m --x64 --dir",
    "noto-mac-silicon": "ELECTRON_ENV=local dotenv -- electron-builder -m --arm64 --dir",
    "noto-mac-universal": "ELECTRON_ENV=local dotenv -- electron-builder -m --universal",
    "noto-mac-all": "npm run build-mac-silicon && npm run build-mac-universal",
    "// noto-lin": "ELECTRON_ENV=local dotenv -- electron-builder -l --ia32 --x64 --dir",
    "// noto-win": "ELECTRON_ENV=local dotenv -- electron-builder --dir -w --ia32 --x64",
    "### SHIP ###": "",
    "// ship-mac": "dotenv -- electron-builder -m -p always",
    "// ship-mac-intel": "dotenv -- electron-builder -m --x64 -p always",
    "ship-mac-silicon": "dotenv -- electron-builder -m --arm64 -p always",
    "ship-mac-universal": "dotenv -- electron-builder -m --universal -p always",
    "ship-all": "npm run ship-mac-silicon && npm run ship-mac-universal"
  },
  "nodemonConfig": {
    "ignore": [
      "data/*",
      "dist/*",
      "dist2/*"
    ]
  },
  "build": {
    "appId": "com.chromatix.app",
    "productName": "Chromatix",
    "directories": {
      "buildResources": "resources/white"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "chromatix-app",
        "repo": "chromatix-release"
      }
    ],
    "files": [
      "!**/dist2/*"
    ],
    "mac": {
      "category": "public.app-category.music",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "./entitlements/default.mas.plist",
      "entitlementsInherit": "./entitlements/default.mas.child.plist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "category": "Music",
      "target": [
        "deb",
        "freebsd",
        "rpm",
        "AppImage",
        "snap"
      ]
    }
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "dotenv-cli": "^8.0.0",
    "electron-log": "^5.2.4",
    "electron-updater": "^6.3.9",
    "electron-window-state": "^5.0.3"
  },
  "devDependencies": {
    "electron": "^34.0.0",
    "electron-builder": "^25.1.8",
    "nodemon": "^3.1.9"
  }
}
